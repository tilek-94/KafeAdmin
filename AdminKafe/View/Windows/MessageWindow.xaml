<Window x:Class="AdminKafe.View.Windows.MessageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AdminKafe.View.Windows"
        mc:Ignorable="d"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        Title="MessageWindow" Height="200" Width="600">
    <Grid>
        <TextBlock x:Name="TextBlock1" Width="500" TextAlignment="Center"
                   Margin="0,30,0,0"
                   FontSize="22">
            Ваше сообщение!
        </TextBlock>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" 
                    VerticalAlignment="Bottom" Margin="0,0,0,30"
                    >
        <Button Content="Да" FontSize="20"
                Foreground="White"
                 Height="40"
                Width="180" Margin="10" Click="Button_Click"/>
        <Button Content="Отмена"
                Height="40"
                 FontSize="20"
                Foreground="White"
                Width="180" Click="Button_Click_1"/>
        </StackPanel>
    </Grid>
</Window>
